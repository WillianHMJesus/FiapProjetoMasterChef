@model MasterChef.Models.ComentarioModel
@using (Html.BeginForm("Create", "Comentario", FormMethod.Post))
{
    <h5>Deixe seu comentário:</h5>

    <dl class="dl-horizontal">
        @using (Html.BeginForm("Create", "Comentario", FormMethod.Post))
        {
            <dt>
                @Html.HiddenFor(m => m.ReceitaId)
                @Html.LabelFor(m => m.Nome)
            </dt>
            <dd>
                @Html.TextBoxFor(m => m.Nome)
            </dd>
            <dt>
                @Html.LabelFor(m => m.ComentarioTexto)
            </dt>
            <dd>
                @Html.TextAreaFor(m => m.ComentarioTexto)
            </dd>
            <dt></dt>
            <dd>
                <input type="submit" value="Create" class="btn btn-default" />
            </dd>
        }
    </dl>
}