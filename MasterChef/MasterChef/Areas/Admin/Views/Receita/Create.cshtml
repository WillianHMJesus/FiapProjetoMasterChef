                @Html.TextBoxFor(r => r.RendimentoPorcoes, new { @class = "form-control" })
                @Html.ValidationMessageFor(r => r.RendimentoPorcoes, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Ingredientes" class="control-label">Ingredientes</label>
                @Html.TextAreaFor(r => r.Ingredientes, new { @class = "form-control" })
